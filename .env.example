# Convex (set by `npx convex dev` or paste from Convex dashboard)
CONVEX_URL=

# Same value as CONVEX_URL; required so the Expo app can reach Convex
EXPO_PUBLIC_CONVEX_URL=

# Public URL of your Convex/Better Auth backend (e.g. your deployed site). Required for auth.
EXPO_PUBLIC_CONVEX_SITE_URL=

# Optional: Full URL to Terms of Service (Settings → Terms of Service)
# EXPO_PUBLIC_TERMS_URL=

# Optional: Full URL to Privacy Policy (Settings → Privacy Policy)
# EXPO_PUBLIC_PRIVACY_URL=
